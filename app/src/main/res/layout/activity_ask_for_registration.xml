<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainContainer"
    tools:context="com.midoconline.app.ui.activities.AskForRegistration">
    <include
        android:id="@+id/toolbar_wrapper"
        layout="@layout/layout_header_file"/>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <Button
            android:id="@+id/btn_registered_doctor"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="REGISTERED DOCTOR"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold"
            android:background="@drawable/btn_custom_bg_blue"
             />
        <Button
            android:id="@+id/btn_want_to_registered"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="I WANT TO REGISTERED"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/margin_xlarge"
            android:background="@drawable/btn_custom_bg_blue"
            android:layout_below="@+id/btn_registered_doctor"
            />
    </RelativeLayout>


</RelativeLayout>
